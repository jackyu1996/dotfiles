set $mod Mod4
font pango:monospace 11
floating_modifier $mod
focus_follows_mouse yes
set $term termite

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left 40px
bindsym $mod+Shift+j move down 40px
bindsym $mod+Shift+k move up 40px
bindsym $mod+Shift+l move right 40px

bindsym $mod+semicolon split h
bindsym $mod+comma split v
bindsym $mod+f fullscreen toggle
bindsym $mod+w layout toggle tabbed splith
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Tab workspace back_and_forth

set $WS1   1:
set $WS2   2:
set $WS3   3:
set $WS4   4:ﴬ
set $WS5   5:
set $WS6   6:
set $WS7   7:
set $WS8   8:﬜
set $WS9   9:

bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8
bindsym $mod+9 workspace $WS9

bindsym $mod+Shift+1 move container to workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8
bindsym $mod+Shift+9 move container to workspace $WS9

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
    bindsym h resize shrink width 10 px or 5 ppt
    bindsym j resize grow height 10 px or 5 ppt
    bindsym k resize shrink height 10 px or 5 ppt
    bindsym l resize grow width 10 px or 5 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $bg-color            #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

bar {
    mode hide
    position top
    strip_workspace_numbers yes
    colors {
        background         $bg-color
        focused_workspace  $bg-color          $bg-color          $text-color
        inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }
}

new_window none
hide_edge_borders both
for_window [class="^.*"] border pixel 0
for_window [class="Anki"] floating enable
for_window [class="Gimp"] floating enable
for_window [class="Telegram"] floating enable
for_window [class="Zathura"] floating enable
for_window [class="flameshot"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="pref"] floating enable
for_window [window_role="task_dialog"] floating enable

gaps inner 10
gaps outer 0
smart_gaps on

assign [class="Firefox"] $WS2
assign [class="mpv"] $WS3
assign [title="emacs"] $WS4
assign [class="Zeal"] $WS5
assign [class="Anki"] $WS7
assign [class="GoldenDict"] $WS8
assign [class="Telegram"] $WS9

client.focused          $bg-color          $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          #00ff00

bindsym $mod+Return exec $term
bindsym $mod+d exec rofi -show run
bindsym $mod+e exec emacs
bindsym $mod+p exec passmenu -i
bindsym $mod+g exec goldendict
bindsym $mod+n exec rofi -show window
bindsym $mod+Shift+q kill
bindsym $mod+Shift+x exec env XSECURELOCK_PASSWORD_PROMPT=emoticon XSECURELOCK_SHOW_HOSTNAME=0 xsecurelock
bindsym XF86AudioMute exec amixer sset Master toggle && notify-send "Volume" "Muted"
bindsym XF86AudioLowerVolume exec amixer sset Master 5%- && notify-send "Volume" "$(amixer sget Master | grep -E -o -m 1 '[0-9]+?%')"
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+ && notify-send "Volume" "$(amixer sget Master | grep -E -o -m 1 '[0-9]+?%')"
bindsym XF86AudioPrev exec mpc prev && notify-send "Now Playing" "$(mpc current)"
bindsym XF86AudioNext exec mpc next && notify-send "Now Playing" "$(mpc current)"
bindsym XF86AudioPlay exec mpc toggle && notify-send "Toggled" "$(mpc status | head -n1)"
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 && notify-send "Brightness Level" "$(xbacklight -get)%"
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 && notify-send "Brightness Level" "$(xbacklight -get)%"
bindsym Print exec flameshot gui

exec --no-startup-id $term -e tmux
exec --no-startup-id compton --config $HOME/.config/compton.conf
exec --no-startup-id dunst
exec --no-startup-id fcitx
exec --no-startup-id feh --bg-scale --randomize --no-fehbg $HOME/.wallpapers/*
exec --no-startup-id firefox
exec --no-startup-id redshift
exec --no-startup-id xmodmap $HOME/.Xmodmap
exec --no-startup-id goldendict
