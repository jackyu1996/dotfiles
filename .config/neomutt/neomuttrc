set abort_nosubject  = no
set abort_unmodified = no
set allow_8bit       = no
set assumed_charset  = "utf-8"
set beep             = no
set bounce_delivered = no
set confirmappend    = no
set delete           = yes
set editor           = "vim"
set fast_reply       = yes
set folder           = "imaps://outlook.office365.com:993"
set header_cache     = "~/.mail/header"
set imap_pass        = "`pass Microsoft | head -n 1`"
set imap_user        = "`pass Microsoft | tail -n 1 | cut -d ' ' -f 2`"
set include          = yes
set index_format     = "%4C %Z %{%b %d %R} %-15.15L (%?l?%4l&%4c?) %s"
set mailcap_path     = "~/.config/neomutt/filetypes.mailcap"
set mark_old         = no
set markers          = no
set mbox             = "~/.mail/mbox"
set message_cachedir = "~/.mail/message"
set move             = yes
set postponed        = "+Drafts"
set realname         = "Jack Yu"
set record           = "+Sent"
set send_charset     = "utf-8"
set sendmail         = "/usr/bin/msmtp"
set sidebar_format   = "%B%?F? [%F]?%* %?N?%N/?%S"
set sidebar_visible  = yes
set sleep_time       = 0
set sort             = reverse-date
set sort_aux         = last-date-received
set sort_browser     = reverse-date
set spoolfile        = "+Inbox"
set user_agent       = no
set wait_key         = no

bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open
bind index,pager \CP sidebar-prev
bind pager G bottom
bind pager g top
bind pager j next-line
bind pager k previous-line

auto_view text/html
alternative_order text/plain text/html

mailboxes =Inbox =Drafts =Archive =Deleted =Sent

